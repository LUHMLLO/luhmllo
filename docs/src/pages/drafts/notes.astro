				grid-auto-rows: max-content;
				grid-template-columns: 1fr;
				grid-template-rows: minmax(max-content, 1fr) minmax(max-content, 1fr);
				overflow: auto;

				& > header {
					padding: var(--spacing);

					& > *:not(:first-child) {
						margin-top: var(--gap);
					}

					& > p {
						font-size: var(--space-nm);
					}

					& > time {
						background-color: var(--clr-background__raised);
						border-radius: var(--space-xs);
						display: inline-block;
						height: 30px;
						padding: 0 var(--space-sm);
						place-content: center;
					}
				}

				& > x-grid {
					padding: var(--spacing);

					button {
						align-items: start;
						background-color: var(--clr-background__raised);
						border-radius: var(--space-xs);
						height: 100%;
						padding-block: var(--space-md);
						text-align: left;
						width: 100%;
					}
				}

				& > label {
					box-shadow: 0 0 100vmax 5vmax var(--clr-background__base);
					inset: var(--space-nm);
					margin: 0 var(--space-nm) var(--space-nm) var(--space-nm);
					position: sticky;
				}
			}
		}
	</style>
