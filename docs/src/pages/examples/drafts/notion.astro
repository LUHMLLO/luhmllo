---
import ShellLayout from '@layouts/app.astro';
import ViewFrame from '@layouts/frame.astro';

const filters = [
	'Discover',
	'Animation',
	'Branding',
	'Illustration',
	'Mobile',
	'Print',
	'Typography',
	'Web Design',
];
---

<ShellLayout scheme='light'>
	<ViewFrame>
		<!--  -->
		<nav class='align-center[items] place-between'>
			<ly-flex axis='x' class='align-center[items] g-sm'>
				<figure
					class='align-center[items] aspect-[1/1] h-auto w-auto bg-primary'>
					<span class='noshrink p-5xl txt-5xl'>A</span>
				</figure>
				<ly-group>
					<span class='txt-600 g-sm'>
						Acme Inc.
						<i data-is='icon'> unfold_more </i>
					</span>
					<p class='clr-subtext'>perian@makenotion.com</p>
				</ly-group>
			</ly-flex>
			<ly-flex axis='x' class='align-center[items] g-5xs'>
				<ly-dropdown>
					<summary slot='summary' class='__button __outline'>
						<i data-is='icon'> more_horiz </i>
					</summary>
					<button>
						<span> options </span>
					</button>
					<button>
						<span> options </span>
					</button>
					<button>
						<span> options </span>
					</button>
				</ly-dropdown>
			</ly-flex>
		</nav>
		<!--  -->
		<ly-group>
			<h6>Jumb Back In</h6>
			<ly-slider axis='x'>
				{
					filters.map(() => (
						<article style='width: calc(var(--scale-5xl) * 2.5);'>
							<figure
								class='aspect-[1/1] bg-primary align-end w-100'
								style='overflow: visible;'>
								{/* <img src="" alt=""> */}
								<i style='margin-bottom: calc(var(--scale-sm) * -1); translate: 0% 16%;'>
									home
								</i>
							</figure>
							<h6 class='px-5xs'>Home</h6>
						</article>
					))
				}
			</ly-slider>
		</ly-group>
		<!--  -->
		<footer>
			<ly-field class='__wrapper'>
				<button class='aspect-[1/1] h-5xl w-max'>
					<i data-is='icon'>search</i>
				</button>
				<input type='search' />
				<button class='aspect-[1/1] h-5xl w-max'>
					<i data-is='icon'>IA</i>
				</button>
			</ly-field>
			<nav class='g-sm place-around'>
				<button>
					<i data-is='icon'> list </i>
				</button>
				<button>
					<i data-is='icon'> search </i>
				</button>
				<button>
					<i data-is='icon'> notifications </i>
				</button>
				<button data-variant='outline'>
					<i data-is='icon'> edit </i>
				</button>
			</nav>
		</footer>
		<!--  -->

		<style lang='css' is:inline>
			@layer astro {
				:global(:is(ly-app)) {
					grid-template-rows:
						max-content
						minmax(0, 1fr)
						max-content !important;
					& > *:first-child {
						margin-top: 0;
					}
				}
			}
		</style>
	</ViewFrame>
</ShellLayout>
