---
import ShellLayout from '@layouts/app.astro';
import ViewFrame from '@layouts/frame.astro';
---

<ShellLayout scheme='dark'>
	<ViewFrame>
		<x-row>
			<a>
				<i data-is='icon'> layers </i>
				<h6>Discovery</h6>
			</a>
		</x-row>

		<x-row style='gap: var(--xs);'>
			<button data-variant='outline'>
				<i data-is='icon'> auto_awesome_mosaic </i>
				<span>Layout</span>
			</button>

			<button data-variant='outline'>
				<i data-is='icon'> looks </i>
				<span>Customizing</span>
			</button>

			<button data-variant='outline'>
				<i data-is='icon'> campaign </i>
				<span>Report Details</span>
			</button>
		</x-row>

		<x-grid style='--cols: 3; gap: var(--sm);'>
			<x-column style='gap: var(--sm);'>
				<x-group style='border-radius: var(--xs); gap: var(--sm); outline: solid 2px var(--clr-border__base); outline-offset: -2px; padding: var(--sm);'>
					<x-row style='align-items: center; justify-content: space-between;'>
						<span>Visualization</span>
						<button data-variant='outline'>
							<i data-is='icon'> add </i>
						</button>
					</x-row>

					<x-row style='gap: var(--sm); flex-wrap: wrap'>
						<button data-variant='outline'>
							<i data-is='icon'> data_exploration </i>
						</button>
						<button data-variant='outline'>
							<i data-is='icon'> database </i>
						</button>
						<button data-variant='outline'>
							<i data-is='icon'> function </i>
						</button>
						<button data-variant='outline'>
							<i data-is='icon'> timeline </i>
						</button>
						<button data-variant='outline'>
							<i data-is='icon'> stacked_line_chart </i>
						</button>
						<button data-variant='outline'>
							<i data-is='icon'> bubble_chart </i>
						</button>
						<button data-variant='outline'>
							<i data-is='icon'> pie_chart </i>
						</button>
						<button data-variant='outline'>
							<i data-is='icon'> donut_large </i>
						</button>
					</x-row>
				</x-group>

				<x-group
					style='border-radius: var(--xs); gap: var(--sm); outline: solid 2px var(--clr-border__base); outline-offset: -2px; padding: var(--sm);'>
					<header class='align-end[items] flex flex-row place-between'>
						<label>Fields</label>
						<x-flex axis='x' class='place-end[items]'>
							<button>
								<i data-is='icon' data-is='icon'> search </i>
							</button>
							<button>
								<i data-is='icon' data-is='icon'> instant_mix </i>
							</button>
						</x-flex>
					</header>
					<x-slider axis='y' class='g-5xs h-100'>
						<button data-variant='outline'>
							<i data-is='icon' class='bg-primary'> text_fields </i>
							<span>Account Name</span>
						</button>
						<button data-variant='outline'>
							<i data-is='icon' class='bg-primary'> text_fields </i>
							<span>Billing City</span>
						</button>
						<button data-variant='outline'>
							<i data-is='icon' class='bg-primary'> text_fields </i>
							<span>Billing State</span>
							<i data-is='icon' class='bg-primary'> text_fields </i>
						</button>
						<button data-variant='outline'>
							<i data-is='icon' class='bg-primary'> text_fields </i>
							<span>Forecast Category</span>
						</button>
						<button data-variant='outline'>
							<i data-is='icon' class='bg-primary'> text_fields </i>
							<span>Industry</span>
						</button>
						<button data-variant='outline'>
							<i data-is='icon' class='bg-primary'> text_fields </i>
							<span>Lead Source</span>
						</button>
						<button data-variant='outline'>
							<i data-is='icon' class='bg-primary'> text_fields </i>
							<span>Opportunity Name</span>
						</button>
						<button data-variant='outline'>
							<i data-is='icon' class='bg-primary'> text_fields </i>
							<span>Owner Role</span>
						</button>
						<button data-variant='outline'>
							<i data-is='icon' class='bg-primary'> tag </i>
							<span>Cast</span>
						</button>
						<button data-variant='outline'>
							<i data-is='icon' class='bg-primary'> tag </i>
							<span>Amount</span>
						</button>
						<button data-variant='outline'>
							<i data-is='icon' class='bg-primary'> tag </i>
							<span>Name</span>
						</button>
						<button data-variant='outline'>
							<i data-is='icon' class='bg-primary'> calendar_month </i>
							<span>Close Date</span>
						</button>
						<button data-variant='outline'>
							<i data-is='icon' class='bg-primary'> calendar_month </i>
							<span>Created Date</span>
						</button>
					</x-slider>
				</x-group>
			</x-column>

			<x-column style='gap: var(--sm);'>
				<x-group
					style='border-radius: var(--xs); gap: var(--sm); outline: solid 2px var(--clr-border__base); outline-offset: -2px; padding: var(--sm);'>
					<header class='align-end[items] flex flex-row place-between'>
						<label>Color Stack</label>
					</header>
					<x-group class='g-5xs place-center[items]'>
						<button data-variant='outline'>
							<i data-is='icon' data-is='icon'> add </i>
						</button>
						<small>Drop Field Here</small>
					</x-group>
					<x-slider class='h-100'> </x-slider>
				</x-group>

				<x-group
					style='border-radius: var(--xs); gap: var(--sm); outline: solid 2px var(--clr-border__base); outline-offset: -2px; padding: var(--sm);'>
					<header class='align-end[items] flex flex-row place-between'>
						<label>Stages</label>
					</header>
					<x-group class='g-5xs place-center[items]'>
						<button data-variant='outline'>
							<i data-is='icon' data-is='icon'> add </i>
						</button>
						<small>Drop Field Here</small>
					</x-group>
					<x-slider class='h-100'> </x-slider>
				</x-group>

				<x-group
					style='border-radius: var(--xs); gap: var(--sm); outline: solid 2px var(--clr-border__base); outline-offset: -2px; padding: var(--sm);'>
					<header class='align-end[items] flex flex-row place-between'>
						<label>Metrics</label>
						<button>
							<i data-is='icon' data-is='icon'> add </i>
						</button>
					</header>
					<x-group class='g-5xs place-center[items]'>
						<button data-variant='outline'>
							<i data-is='icon' data-is='icon'> add </i>
						</button>
						<small>Drop Field Here</small>
					</x-group>
					<x-slider axis='y' class='h-100'>
						<button data-variant='outline'>
							<i data-is='icon' class='bg-primary'> text_fields </i>
							<span>Opportunity</span>
						</button>
					</x-slider>
				</x-group>
			</x-column>

			<x-column
				style='border-radius: var(--xs); gap: var(--sm); outline: solid 2px var(--clr-border__base); outline-offset: -2px; padding: var(--sm);'>
				<header class='align-end[items] flex flex-row place-between'>
					<header>
						<label>Opportunity ID</label>
					</header>
					<div class='container'></div>
				</header>
			</x-column>
		</x-grid>
	</ViewFrame>
</ShellLayout>
