<section data-is='stack' data-layout='expand-content'>
	<header>
		<h2>Products</h2>
		<p>Product component preview</p>
	</header>

	<br />

	<div data-is='slider' data-variant='horizontal' style='gap: var(--nm);'>
		{
			data.map((el) => (
				<article data-is='card' style='width: 512px;'>
					<span> {el.tag} </span>

					<header data-is='group' style='gap: var(--sm);'>
						<figure>
							<img src={el.thumbnail} alt='thumbnail' />
						</figure>
						<h5>{el.name}</h5>
						<p>{el.description}</p>
					</header>

					<footer data-is='row'>
						<span style='flex: 1 1;'>Price</span>
						<var>{el.price}</var>
					</footer>
				</article>
			))
		}
	</div>

	<style lang='css' is:inline>
		@scope {
			:scope {
				[data-is='card'] {
					background-color: var(--clr-background__raised);

					& > ul {
						li {
							padding-bottom: var(--sm);

							&:not(:last-child) {
								border-bottom: solid 2px var(--clr-border__base);
							}
						}
					}
				}
			}
		}
	</style>
</section>
