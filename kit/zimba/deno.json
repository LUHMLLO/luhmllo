{
  "lock": false,
  "nodeModulesDir": "auto",
  "name": "@luhmllo/zimba",
  "version": "0.0.1",
  "description": "A set of tools for fast development",
  "license": "MIT",
  "exports": {
    ".": "./mod.ts"
  },
  "publish": {
    "include": [
      "./mod.ts",
      "./src/**/*.mts",
      "./LICENSE",
      "./readme.md"
    ]
  },
  "exclude": [
    "./dist",
    "./node_modules",
    "./build.ts"
  ],
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
    "build": "deno run -A ./build.ts",
    "publish": "deno run -A ./publish.ts"
  },
  "compilerOptions": {
    "lib": [
      "deno.window",
      "dom"
    ]
  }
}